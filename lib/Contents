#include "LIST_LEN.hpp"

bool exec::LIST_LEN(Process& p) {
    auto list = p.stack.pop();
    auto list_obj = std::dynamic_pointer_cast<List>(list);
    p.stack.push(std::make_shared<Integer>(list_obj->size()));
    return true;
}

